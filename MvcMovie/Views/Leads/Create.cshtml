@model MvcLead.Models.Lead
@{
    ViewData["Title"] = "Create";
}
<div class="container body-content">
    <section class="mbr-section mbr-section__container " id="header3-0" data-rv-view="5" style="background-color: rgb(255, 255, 255); padding-top: 20px; padding-bottom: 20px;">
        <p>
            <br />
            <br />
            <br />
            <br />
            <h3>Create Lead</h3>
           
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="LeadName" class="control-label"></label>
                            <input asp-for="LeadName" class="form-control" />
                            <span asp-validation-for="LeadName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="StartDate" class="control-label"></label>
                            <input asp-for="StartDate" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Type" class="control-label"></label>
                            <input asp-for="Type" class="form-control" />
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Quote" class="control-label"></label>
                            <input asp-for="Quote" class="form-control" />
                            <span asp-validation-for="Quote" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </form>
                </div>
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
</section>
</div>